                    </div>
                </div>
            </div>   
            <!-- END POST LIST -->
            <div class="pull-right"><?php echo $posts->links(); ?></div>
            <div class="clearfix"></div>
            <?php else: ?>
            <div class="note note-info">
                <h4 class="block"><?php echo $langLbl['The post is empty.']; ?></h4>
